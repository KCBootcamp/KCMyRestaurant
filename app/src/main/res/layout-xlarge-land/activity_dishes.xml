<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_dishes"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="es.bhavishchandnani.myrestaurant.activities.DishesActivity">

<include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

<fragment
    android:id="@+id/fragment_dishes"
    android:name="es.bhavishchandnani.myrestaurant.fragments.DishesFragment"
    android:layout_marginLeft="@dimen/fragment_horizontal_margin"
    android:layout_marginRight="@dimen/fragment_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.7"/>

    <FrameLayout
        android:id="@+id/fragment_dish_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"/>
    </LinearLayout>

</LinearLayout>
