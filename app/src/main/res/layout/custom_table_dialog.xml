<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:orientation="vertical"
              android:weightSum="1">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/table_dialog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dim"
        android:layout_weight="0.8"
        android:paddingTop="@dimen/list_vertical_margin"
        android:paddingBottom="@dimen/list_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dim"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/table_people_header"/>
        <EditText
            android:id="@+id/edit_dialog_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/edittext_horizontal_padding"
            android:paddingRight="@dimen/edittext_horizontal_padding"
            android:layout_marginLeft="@dimen/edittext_horizontal_margin"
            android:hint="@string/zero_number"
            android:background="@color/colorLightGrey"
            android:inputType="number" />
    </LinearLayout>

</LinearLayout>